<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_activity.view.HomeActivity">

    <TextView
        android:id="@+id/tv_email_landing_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Home Activity" />

    <Button
        android:id="@+id/btn_ok_landing_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/btn_open_post_activity_color"
        android:padding="16dp"
        android:text="@string/read_posts"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tv_email_landing_activity"
        app:layout_constraintStart_toStartOf="@+id/tv_email_landing_activity"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_landing_activity" />

    <Button
        android:id="@+id/btn_open_design_activity_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"
        android:padding="16dp"
        android:background="@color/fragment_first_background"
        android:text="@string/open_design_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ok_landing_activity" />


</androidx.constraintlayout.widget.ConstraintLayout>