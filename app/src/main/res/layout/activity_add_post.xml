<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="AddPostActivityViewModel"
            type="com.example.loginapp.posts.add_post_activity.AddPostActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".posts.add_post_activity.AddPostActivity">

    <EditText
        android:hint="Post Title"
        android:id="@+id/et_post_title_add_activity_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@={AddPostActivityViewModel.mPostTitle}"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:hint="Post Description"
        android:id="@+id/et_post_description_add_activity_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@={AddPostActivityViewModel.mPostDesc}"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/et_post_title_add_activity_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_post_title_add_activity_id"
        app:layout_constraintTop_toBottomOf="@+id/et_post_title_add_activity_id" />

    <EditText
        android:hint="Post User Id"
        android:id="@+id/et_post_user_id_add_activity_id"
        android:inputType="number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/et_post_description_add_activity_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_post_description_add_activity_id"
        app:layout_constraintTop_toBottomOf="@+id/et_post_description_add_activity_id"
        android:text="@={AddPostActivityViewModel.mPostUserId}"/>

    <Button
        android:id="@+id/btn_create_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Create"
        android:onClick="@{(view) -> AddPostActivityViewModel.onClick(view)}"
        app:layout_constraintEnd_toEndOf="@+id/et_post_user_id_add_activity_id"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/et_post_user_id_add_activity_id"
        app:layout_constraintTop_toBottomOf="@+id/et_post_user_id_add_activity_id" />

    <TextView
        android:id="@+id/tv_created_post_result_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="16dp"
        android:text="Created Post Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_create_post" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
